<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <com.daimajia.slider.library.SliderLayout
            android:id="@+id/slider"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.daimajia.slider.library.Indicators.PagerIndicator
            android:id="@+id/custom_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|bottom" />

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

           <LinearLayout
               android:id="@+id/linear1"
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">


               <ImageView
                   android:background="@drawable/bike_button"
                   android:layout_gravity="center"
                   android:layout_width="70dp"
                   android:layout_height="@dimen/_70dp"
                   android:src="@drawable/bike"
                />
           </LinearLayout>
        <LinearLayout
            android:layout_below="@id/linear1"
            android:id="@+id/linear2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:background="@drawable/car_button"

                android:layout_width="@dimen/_70dp"
                android:layout_height="@dimen/_70dp"
                android:src="@drawable/car"/>

            <ImageView
                android:background="@drawable/gift_button"
            android:layout_width="@dimen/_70dp"

            android:layout_height="@dimen/_70dp"
            android:src="@drawable/gift"/>
        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/linear2"
            android:id="@+id/linear3"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="@dimen/_70dp"
                android:layout_height="@dimen/_70dp"
                android:src="@drawable/hfmlogo"/>
        </LinearLayout>



        <LinearLayout
            android:layout_below="@id/linear3"
            android:id="@+id/linear4"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:background="@drawable/money_button"
                android:layout_width="@dimen/_70dp"
                android:layout_height="@dimen/_70dp"
                android:src="@drawable/money"/>

            <ImageView
                android:background="@drawable/dollar_button"
            android:layout_width="@dimen/_70dp"
            android:layout_height="@dimen/_70dp"
            android:src="@drawable/dollar"/>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@id/linear4"
            android:id="@+id/linear5"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@drawable/laptop_button"
                android:layout_gravity="center"
                android:layout_width="@dimen/_70dp"
                android:layout_height="@dimen/_70dp"
                android:src="@drawable/laptop"/>
        </LinearLayout>
    </RelativeLayout>

